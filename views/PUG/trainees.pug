table.gridTableTrainees
  thead
    tr
      th Name
      th Phone Number
      th Birth Date
      th Join Date
      th Delete Trainee
  tbody
    each trainee in trainees
      tr
        td #{trainee.id}
        td #{trainee.name}
        td 0#{trainee.phone}
        td #{trainee.birth_date}
        td #{trainee.join_date}
        td
          form.inline(action='/trainees/'+trainee.id method="POST")
            button(type="submit")
              span DELETE

